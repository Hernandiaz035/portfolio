---
import ActiveBadge from '@/components/ActiveBadge.astro'
import Layout from '../layouts/Layout.astro'
import LinkedInDetail from '@/components/details/LinkedInDetail.astro'
import MailDetail from '@/components/details/MailDetail.astro'
import GithubDetail from '@/components/details/GithubDetail.astro'
import Timeline from '@/components/timeline/Timeline.astro'
import Projects from '@/components/projects/Projects.astro'
import { experience, projects } from '@/content/data.secret'
---

<Layout title="Hedior">
	<section>
		<header
			class="mb-8 mt-20 flex w-fit flex-col justify-between gap-x-8 gap-y-4 sm:flex-row sm:items-center sm:justify-start"
		>
			<h1
				class="inline-block bg-gradient-to-r from-indigo-500 from-25% via-purple-500 via-50% to-pink-600 bg-clip-text text-7xl font-extrabold text-transparent"
			>
				Hernan Diaz
			</h1>
			<ActiveBadge>Available to hire</ActiveBadge>
		</header>

		<div class="grid grid-cols-2 gap-4 md:grid-cols-6 lg:grid-cols-12">
			<h2 class="col-span-2 text-pretty text-xl md:col-span-4 lg:col-span-8">
				Hello! I'm a Full-Stack Developer in Sydney. My career is marked by creative solutions in
				tech, ranging from innovative NFT marketplaces to sophisticated banking systems. I thrive on
				learning new technologies and am keen on sharing this knowledge. Eager for new challenges, I
				bring a blend of skill, curiosity, and collaborative spirit to every project.
			</h2>
			<ul
				class="col-span-2 col-start-1 mt-4 flex flex-row flex-wrap items-start justify-start gap-4 md:col-span-5 lg:col-span-10"
			>
				<li class=""><LinkedInDetail href="https://www.linkedin.com/in/hernandiaz035/" /></li>
				<li class=""><GithubDetail href="https://github.com/hedior03/" /></li>
				<li class=""><MailDetail /></li>
			</ul>
		</div>
	</section>

	<section>
		<Timeline experience={experience} />
	</section>

	<section>
		<Projects projects={projects} />
	</section>
</Layout>
