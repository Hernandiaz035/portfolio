---
import External from '../../icons/External.astro'
import DetailWrapper from './DetailWrapper.astro'

export interface Props {
	href: string
	className?: string
	isExternal?: boolean
}
const { href, isExternal = true, className } = Astro.props
---

<a href={href} target="_blank" rel="noreferrer" class="group">
	<DetailWrapper {className}>
		<slot name="icon" />
		<slot />
		{isExternal && <External class="size-4 min-w-4 text-hd-black/70 dark:text-white/70" />}
	</DetailWrapper>
</a>
