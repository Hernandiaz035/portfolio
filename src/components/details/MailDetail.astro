---
import ActionDetail from './base/ActionDetail.astro'
import MailIcon from '../icons/MailIcon.astro'
import CopyIcon from '../icons/CopyIcon.astro'
import CopyButton from './base/CopyButton'

const copyText = 'hernandiaz035@gmail.com'
---

<CopyButton client:only="preact" copyText={copyText} actionText="Copy" feedbackText="Email Copied!">
	<ActionDetail>
		<MailIcon slot="icon" class="size-5" />
		<span class="before:content-['hfdiaz035'] after:content-['gmail.com']">&#64</span>
		<CopyIcon slot="action-icon" class="size-4 text-hd-black/70 dark:text-white/70" />
	</ActionDetail>
</CopyButton>
