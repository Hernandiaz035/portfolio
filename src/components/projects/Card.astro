---
import type { Project } from '@/content/types'
import Pill from './Pill.astro'
import AnchorDetail from '../details/base/AnchorDetail.astro'

interface Props extends Project {}

const { image, imageAlt, title, description, tags, links } = Astro.props
---

<article
	class="w-full rounded-lg border border-gray-500/60 object-cover transition-transform hover:scale-105"
>
	<img src={image} alt={imageAlt} class="rounded-t-lg" />
	<div class="flex size-full flex-col gap-y-2 px-4 pb-8 pt-4">
		<h3 class="text-balance text-xl font-semibold">{title}</h3>
		<p class="text-pretty">{description}</p>
		<ul class="flex flex-row flex-wrap gap-2">
			{tags.map((tag) => <Pill>{tag}</Pill>)}
		</ul>
		<ul class="mx-4 mt-6 grid grid-cols-2 gap-8">
			{
				links.map((link) => (
					<li>
						<AnchorDetail className="w-full justify-between border-[1.5px]" href={link.url}>
							{link.label}
						</AnchorDetail>
					</li>
				))
			}
		</ul>
	</div>
</article>
