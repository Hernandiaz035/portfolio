---
import type { Role as RoleProps } from '@/content/types'

export interface Props extends RoleProps {}

const { company, location, period, title, description, highlights } = Astro.props
---

<li class="mb-10 ml-4">
	<div
		class="absolute left-0 mt-1.5 size-4 -translate-x-[calc(50%+1px)] rounded-full bg-hd-blue dark:bg-hd-light-blue"
	>
	</div>
	<h3 class="text-balance text-lg font-semibold">
		<span class="text-xl font-bold">{company}</span> â€” {title}
	</h3>
	<p class="text-sm font-light text-hd-grey dark:text-hd-white/60">{location}</p>
	<time class="mb-1 text-xs font-light leading-none text-hd-grey dark:text-hd-white/60">
		{period}
	</time>
	<p class="mb-2 mt-2 text-pretty text-base font-normal text-hd-grey dark:text-hd-white">
		{description}
	</p>
	<ul>
		{highlights.map((highlight) => <li class="ml-4 list-outside list-disc">{highlight}</li>)}
	</ul>
</li>
